{
  "compilerOptions": {
    "target": "ES6",
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": false,
    "outDir": "./lib",
    "rootDir": "./packages",
    "declaration": true
  },
  "include": ["packages/**/*.ts"],
  "exclude": ["node_modules"]
}